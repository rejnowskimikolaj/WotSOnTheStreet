<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/listed_news_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/listed_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="This is title"
        android:textAppearance="@style/ListedArticleTitleStyle" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/listed_news_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="This is content blablabldajfjkdmalfja"
        android:textAppearance="@style/ListedArticleContentStyle" />

    <include layout="@layout/news_divider" />

</LinearLayout>
