<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:elevation="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/listed_news_item_title"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:maxLength="40"
            android:text="this is title max 40"
            android:textAppearance="@style/ListedArticleTitleStyle" />

        <ImageView
            android:id="@+id/listed_news_item_imageView"
            android:layout_width="188dp"
            android:layout_height="59dp"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/listed_news_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.39"
        android:text="This is content blablabldajfjkdmalfja"
        android:textAppearance="@style/ListedArticleContentStyle" />

    <include layout="@layout/news_divider" />


</LinearLayout>